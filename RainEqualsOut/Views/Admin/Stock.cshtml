@model RainEqualsOut.Models.StockViewData
@{
    ViewBag.Title = "Stock";
}

<h2>Please Enter Your Information</h2>

@using (Html.BeginForm("AddToStock", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="col-md-10">
        @Html.LabelFor(model => model.Product, htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.DropDownListFor(model => model.InventoryId, new SelectList(Model.InventoryList, "ID", "Product"), "", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.InventoryList, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <div class="col-md-10">
            @Html.LabelFor(model => model.Quantity, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.Quantity, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Quantity, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
