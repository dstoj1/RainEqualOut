 @model List<RainEqualsOut.Models.Inventory>
@{
    ViewBag.Title = "Products";
}
<h2>@ViewBag.Title.</h2>
@*@Html.ActionLink("Add Pick Up", "AddAddress", "Customer")*@
@if (Model.Count > 0)
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Products Availabl</th>
            </tr>
        </thead>
        <tbody>
            @foreach (RainEqualsOut.Models.Inventory inventory in Model)
                {
                <tr>
                    <td>
                       <img src="@inventory.Photo" /><br />  @inventory.Product<br />  @inventory.Description<br />  @inventory.Size<br /> @inventory.Color<br /> @inventory.Type<br /> $@inventory.Price <br />
                        @Html.ActionLink("Remove Product", "RemoveProduct", "Admin", new { id = inventory.ID }, null)<br />
                        @Html.ActionLink("Edit Product Info", "Edit", "Admin", new { id = inventory.ID }, null)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p> No Product found,  Please Enter Product Information</p>
}